<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TraVitaApp.HomePage"
             BackgroundColor="#E1F5FE"
             Title="TraVital">
    <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
        <Image Source="Welcome.png" HorizontalOptions="Center" HeightRequest="100"/>
        <StackLayout Padding="20">
            <Button Text="Sign Up" BackgroundColor="#0D47A1" TextColor="White" FontSize="Medium" Clicked="Button_Clicked" />
            <Label Text="Already have an account?" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="#0D47A1" FontSize="Small" IsVisible="True"/>
            <Button Text="Login" BackgroundColor="#0D47A1" TextColor="White" FontSize="Medium" Clicked="Button_Clicked_1" />
        </StackLayout>
    </StackLayout>
</ContentPage>